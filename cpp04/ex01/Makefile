CXXFLAGS = -Wall -Wextra -Werror -std=c++98

NAME = Brain

SRCS =	main.cpp Animal.cpp Dog.cpp Cat.cpp Brain.cpp

OBJS = ${SRCS:.cpp=.o}


all : $(NAME)

$(NAME) : $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^
	
clean :
	${RM} $(OBJS)

fclean : clean
	${RM} $(NAME)

re : fclean all

.PHONY : all clean fclean re 